{
  "info": {
    "name": "LMS Backend API DEMO",
    "description": "Demo-ready Postman collection for the LMS backend. Start with the Demo Flow folder.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "const fromData = pm.iterationData.get('active_user');",
          "const fromEnv = pm.environment.get('active_user');",
          "const activeUser = String(fromData || fromEnv || 'student').toLowerCase();",
          "const map = {",
          "  admin: { emailVar: 'admin_email', passwordVar: 'admin_password', role: 'admin' },",
          "  instructor: { emailVar: 'instructor_email', passwordVar: 'instructor_password', role: 'instructor' },",
          "  student: { emailVar: 'student_email', passwordVar: 'student_password', role: 'student' }",
          "};",
          "const selected = map[activeUser] || map.student;",
          "const email = pm.environment.get(selected.emailVar) || '';",
          "const password = pm.environment.get(selected.passwordVar) || '';",
          "pm.environment.set('active_user', activeUser);",
          "pm.environment.set('email', email);",
          "pm.environment.set('password', password);",
          "pm.environment.set('role', selected.role);"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Demo Flow",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/v1/health"
          },
          "response": []
        },
        {
          "name": "Login as Admin (Set Tokens)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Admin login 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "if (json.tokens) {",
                  "  pm.environment.set('access_token', json.tokens.access_token || '');",
                  "  pm.environment.set('refresh_token', json.tokens.refresh_token || '');",
                  "}",
                  "if (json.user) {",
                  "  pm.environment.set('user_id', json.user.id || '');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"{{admin_password}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": "{{base_url}}/api/v1/auth/login"
          },
          "response": []
