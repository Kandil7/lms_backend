# Application
PROJECT_NAME=LMS Backend
VERSION=1.0.0
ENVIRONMENT=development
API_V1_PREFIX=/api/v1
DEBUG=true
ENABLE_API_DOCS=true
STRICT_ROUTER_IMPORTS=false
METRICS_ENABLED=true
METRICS_PATH=/metrics
API_RESPONSE_ENVELOPE_ENABLED=false
API_RESPONSE_SUCCESS_MESSAGE=Success
API_RESPONSE_ENVELOPE_EXCLUDED_PATHS=/docs,/redoc,/openapi.json,/metrics,/api/v1/health,/api/v1/ready,/api/v1/auth/token
SENTRY_DSN=
SENTRY_ENVIRONMENT=
SENTRY_RELEASE=
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_PROFILES_SAMPLE_RATE=0.0
SENTRY_SEND_PII=false
SENTRY_ENABLE_FOR_CELERY=true
WEBHOOKS_ENABLED=false
WEBHOOK_TARGET_URLS=
WEBHOOK_SIGNING_SECRET=
WEBHOOK_TIMEOUT_SECONDS=5.0

# Database
POSTGRES_USER=REDACTED  # Replace with database user in production/staging
POSTGRES_PASSWORD=REDACTED  # Replace with strong password in production/staging
POSTGRES_DB=REDACTED  # Replace with database name in production/staging
DATABASE_URL=postgresql+psycopg2://REDACTED:REDACTED@localhost:5432/REDACTED  # Replace with actual database connection in production/staging
DB_WAIT_TIMEOUT_SECONDS=180
DB_WAIT_INTERVAL_SECONDS=2
SQLALCHEMY_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Security
SECRET_KEY=REDACTED  # Replace with strong random secret (at least 64 chars) in production/staging
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
EMAIL_VERIFICATION_TOKEN_EXPIRE_MINUTES=1440
ALLOW_PUBLIC_ROLE_REGISTRATION=false
REQUIRE_EMAIL_VERIFICATION_FOR_LOGIN=false
MFA_CHALLENGE_TOKEN_EXPIRE_MINUTES=10
MFA_LOGIN_CODE_EXPIRE_MINUTES=10
MFA_LOGIN_CODE_LENGTH=6
ACCESS_TOKEN_BLACKLIST_ENABLED=true
ACCESS_TOKEN_BLACKLIST_FAIL_CLOSED=false
ACCESS_TOKEN_BLACKLIST_PREFIX=auth:blacklist:access
SECURITY_HEADERS_ENABLED=true
FRONTEND_BASE_URL=http://localhost:3000
APP_DOMAIN=
EMAIL_FROM=onboarding@resend.dev
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Optional Firebase
# Set FIREBASE_FUNCTIONS_URL to use Firebase Cloud Functions as email transport.
# When using Firebase transport, SMTP_* can stay as fallback only.
FIREBASE_ENABLED=true
FIREBASE_PROJECT_ID=lms-backend-82345
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_AUTH_EMULATOR_HOST=
# Example: https://sendemail-xxxxxxxxxx-xx.a.run.app (obtained after firebase deploy)
FIREBASE_FUNCTIONS_URL=
FIREBASE_FUNCTIONS_API_KEY=


# Resend SMTP quick start (recommended)
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=587
# SMTP_USERNAME=resend
# SMTP_PASSWORD=re_xxxxxxxxxxxxxxxxxxxxx
# EMAIL_FROM=onboarding@resend.dev  # dev/testing sender (use verified domain in production)
# SMTP_USE_TLS=true
# SMTP_USE_SSL=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
TRUSTED_HOSTS=localhost,127.0.0.1,testserver

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
TASKS_FORCE_INLINE=true
RATE_LIMIT_USE_REDIS=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_REDIS_PREFIX=ratelimit
RATE_LIMIT_EXCLUDED_PATHS=/,/docs,/redoc,/openapi.json,/api/v1/health,/api/v1/ready,/metrics
AUTH_RATE_LIMIT_REQUESTS_PER_MINUTE=60
AUTH_RATE_LIMIT_WINDOW_SECONDS=60
AUTH_RATE_LIMIT_PATHS=/api/v1/auth/login,/api/v1/auth/token,/api/v1/auth/login/mfa
MAX_FAILED_LOGIN_ATTEMPTS=5
FILE_UPLOAD_RATE_LIMIT_REQUESTS_PER_HOUR=100
FILE_UPLOAD_RATE_LIMIT_WINDOW_SECONDS=3600
FILE_UPLOAD_RATE_LIMIT_PATHS=/api/v1/files/upload

# Cache
CACHE_ENABLED=true
CACHE_KEY_PREFIX=app:cache
CACHE_DEFAULT_TTL_SECONDS=120
COURSE_CACHE_TTL_SECONDS=120
LESSON_CACHE_TTL_SECONDS=120
QUIZ_CACHE_TTL_SECONDS=120
QUIZ_QUESTION_CACHE_TTL_SECONDS=120

# File Uploads
UPLOAD_DIR=uploads
CERTIFICATES_DIR=certificates
MAX_UPLOAD_MB=100
ALLOWED_UPLOAD_EXTENSIONS=mp4,avi,mov,pdf,doc,docx,jpg,jpeg,png
FILE_STORAGE_PROVIDER=azure
FILE_DOWNLOAD_URL_EXPIRE_SECONDS=900

# Optional Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_ACCOUNT_URL=https://<storage-account>.blob.core.windows.net
AZURE_STORAGE_CONTAINER_NAME=lms-files
AZURE_STORAGE_CONTAINER_URL=

# Optional Azure Key Vault (used in production secrets loading)
AZURE_KEYVAULT_URL=

# Optional bootstrap users (helper scripts)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPass123
ADMIN_FULL_NAME=System Admin
INSTRUCTOR_EMAIL=instructor@example.com
INSTRUCTOR_PASSWORD=InstructorPass123
INSTRUCTOR_FULL_NAME=Course Instructor
INSTRUCTOR_UPDATE_EXISTING=false
INSTRUCTOR_VERIFY_EMAIL=true
INSTRUCTOR_IS_ACTIVE=true
