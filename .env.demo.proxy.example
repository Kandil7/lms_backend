# Public demo domain (DuckDNS or any DNS name)
DEMO_DOMAIN=egylmsdemo.duckdns.org

# Email used for Let's Encrypt registration
LETSENCRYPT_EMAIL=you@example.com

# Demo API upstream (side-by-side demo defaults to localhost:8002)
DEMO_UPSTREAM=http://host.docker.internal:8002

# Reverse proxy host ports
DEMO_HTTP_PORT=80
DEMO_HTTPS_PORT=443

# DuckDNS updater configuration
DUCKDNS_SUBDOMAINS=egylmsdemo
DUCKDNS_TOKEN=change-me
DUCKDNS_UPDATE_IP=ipv4

# Runtime defaults
DUCKDNS_PUID=1000
DUCKDNS_PGID=1000
TZ=Africa/Cairo
